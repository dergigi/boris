{
  "version": 2,
  "functions": {
    "api/article-og.ts": {
      "maxDuration": 10
    },
    "api/article-og-refresh.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/a/:naddr",
      "destination": "/index.html",
      "has": [
        { "type": "query", "key": "_spa", "value": "1" }
      ]
    },
    {
      "source": "/a/:naddr",
      "destination": "/api/article-og?naddr=:naddr"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

